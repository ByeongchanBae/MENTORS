<div class="bg-light">
  <div class="jumbotron">
    <h1 class="display-4"><%= @mentor.title %></h1>
    <h3><%= @mentor.speciality %></h3>
    <p class="lead"><%= @mentor.description %> | <%= @mentor.price %></p>
    <hr class="my-4">
  </div>
</div>


  <%= link_to 'Book',  new_mentor_booking_path(@mentor), class:"btn btn-secondary" %>
  <% if current_user == @mentor.user %>
  <%= link_to 'Edit', edit_mentor_path(@mentor), class:"btn btn-secondary" %>
  <%= link_to 'Delete', @mentor, method: :delete, data: { confirm: 'Are you sure you want to delete your profile?' }, class:"btn btn-danger" %>
  <% end %>

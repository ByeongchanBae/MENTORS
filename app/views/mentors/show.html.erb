
<div class="container-show">
  <div class = "card-wrapper">
    <div class = "card-show">
      <!-- card left -->
      <% if @mentor.avatar.attached? %>
      <%= cl_image_tag(@mentor.avatar.key, :transformation=>[
      {:width=>400, :height=>400, :gravity=>"face", :radius=>"max", :crop=>"crop"},
      {:width=>200, :crop=>"scale"}
  ]) %>
        <% end %>
        <!-- card right -->
        <div class = "product-content">
          <h2 class = "product-title"> <%= @mentor.title %> </h2>
          <div class="product-price">
            <h4>$<%= @mentor.price %> per day</h4>
          </div>
          <div class="product-detail">
            <h4><%= @mentor.speciality %></h4>
            <p><%= @mentor.description  %></p>
          </div>
          <div class = "purchase-info">
            <%= link_to 'Book',  new_mentor_booking_path(@mentor), class:"btn btn-secondary" %>
            <% if current_user == @mentor.user %>
            <%= link_to 'Edit', edit_mentor_path(@mentor), class:"btn btn-secondary" %>
            <%= link_to 'Delete', @mentor, method: :delete, data: { confirm: 'Are you sure you want to delete your profile?' }, class:"btn btn-danger" %>
            <% end %>
          </div>
          <div class = "social-links">
            <p>Follow <%= @mentor.title %> on</p>
            <a href = "#">
              <i class = "fab fa-facebook-f"></i>
            </a>
            <a href = "#">
              <i class = "fab fa-twitter"></i>
            </a>
            <a href = "#">
              <i class = "fab fa-instagram"></i>
            </a>
            <a href = "#">
              <i class="fab fa-github"></i>
            </a>
            <a href = "#">
             <i class="fab fa-linkedin"></i>
           </a>
         </div>
       </div>
     </div>
   </div>
 </div>

 <div class="bottom-container">
  <div id="map"
    style="width: 500px; height: 500px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="right">
    <h1>Reviews</h1>
    <div class = "product-rating">
      <i class = "fas fa-star"></i>
      <i class = "fas fa-star"></i>
      <i class = "fas fa-star"></i>
      <i class = "fas fa-star-half-alt"></i>
      <span>3.5(0)</span>
    </div>
    <% if current_user == @mentor.user %>
    <% else %>
    <%= render 'reviews/new' %>
    <%end%>
      <div class="notification">
        <% @mentor.reviews.each do |review| %>
        <img src='https://kitt.lewagon.com/placeholder/users/arthur-littm' class="avatar-large" />
        <div class="notification-content">
          <p><small>5th March</small></p>
          <p><%= review.content %></p>
          <%end%>
        </div>
      </div>
  </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright">
    Hope This Helped <i class="fas fa-heart"></i> From Mentors
  </div>
</div>







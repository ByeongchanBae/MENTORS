<h1>Mentors</h1>

<table>
  <thead>
    <tr>
      <h2>Title</h2>
      <h3>Speciality</h3>
      <p>Description</p>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @mentors.each do |mentor| %>
    <tr>
      <td><%= mentor.title %></td>
      <td><%= mentor.speciality %></td>
      <td><%= mentor.description %></td>
      <td><%= mentor.price %></td>
      <td><%= link_to 'Show', mentor %></td>
      <% if mentor.user == current_user %>
        <td><%= link_to 'Edit', edit_mentor_path(mentor) %></td>
      <% end %>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Mentor', new_mentor_path %>

<h1>Mentors</h1>

<table>
  <thead>
    <tr>
      <h2>Title</h2>
      <h3>Speciality</h3>
      <p>Description</p>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= @mentors.each do |mentor| %>
      <h2><%= @mentor.title %></h2>
      <h3><%= @mentor.speciality %></h3>
      <p><%= @mentor.description %></p>
      <li><%= @mentor.price %></li>
      <li><%= link_to 'Show', mentor %></li>
      <li><%= link_to 'Edit', edit_mentor_path(mentor) %></li>
      <li><%= link_to 'Destory', mentor, method: :delete, data: { confirm: 'Are you sure you want to delete your profile?' } %></li>
    <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Mentor', new_mentor_path %>

<h1>My bookings:</h1>

<table>
  <thead>
    <tr>
      <h2>Start date</h2>
      <h3>End date</h3>
      <p>Price</p>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @bookings.each do |booking| %>
    <tr>
      <td><%= booking.start_date %></td>
      <td><%= booking.end_date %></td>
      <td>$<%= booking.price %></td>
      <td><%= link_to 'Show', booking %></td>
      <% if booking.user == current_user %>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
      <% end %>
    <% end %>
  </tbody>
</table>

